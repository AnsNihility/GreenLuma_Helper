<Window x:Class="FindMySteamDLC.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindMySteamDLC"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="80" Width="180" ResizeMode="NoResize" WindowStyle="None" Topmost="True" ShowInTaskbar="False">
    <Grid>
        <Label Content="Loading all the data..." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-54,0,0"/>
        <Label x:Name="lbl_game" Content="{Binding }" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
